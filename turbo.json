{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
      },
      "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
      },
      "test": {
        "dependsOn": ["^build"],
        "outputs": ["coverage/**"]
      },
      "lint": {
        "dependsOn": ["^build"],
        "outputs": []
      },
      "type-check": {
        "dependsOn": ["^build"],
        "outputs": []
      },
      "clean": {
        "cache": false
      }
    }
  }