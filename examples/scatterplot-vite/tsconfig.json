{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@protspace/core": ["../../packages/core/src/index.ts"],
      "@protspace/utils": ["../../packages/utils/src/index.ts"]
    },
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["src", "vite.config.ts", "vite.paths.ts", "vite.entries.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
